<% content_for :page_title, "Edit todo list" %>
<h1 class="todo_list_title">edit list</h1>

<div class="forms">
  <%= simple_form_for (@list) do |f| %>
    <div class = "form-group">
      <%= f.input :title, input_html: { class: "form-control"} %>
      <%= f.input :description, input_html: { class: "form-control"} %>
    </div>
    <%= f.submit "Update", class: "btn-primary", data: { disable_with: "Updating..."} %>
  <% end %>
  <div class="links"><%= link_to 'Cancel', lists_path %></div>
</div>
