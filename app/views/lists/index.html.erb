<% content_for :page_title, "Index" %>
<% @lists.each do |list| %>
  <div class="index_row clearfix">
    <h2 class="todo_list_title"><%= link_to(list.title, list_path(list)) %></h2>
    <p class="todo_list_sub_title"><%= list.description %></p>
    <div class="links">
      <% if list.editable_by?(current_user) %>
        <%= link_to("EDIT", edit_list_path(list)) %> |
        <%= link_to("DELETE", list_path(list),method: :delete, data: { confirm: "Are you sure?" } ) %>
      <% end %>
    </div>

  </div>
<% end %>

<div class="links">
  <%= link_to "New todo list", new_list_path %>
</div>

