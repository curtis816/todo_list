<div class="col-md-12">
  <h1 class="todo_list_title">new list</h1>
  <hr>
  <div class="forms">
    <%= simple_form_for (@list) do |f| %>
      <div class = "form-group">
        <%= f.input :title, input_html: { class: "form-control"} %>
        <%= f.input :description, input_html: { class: "form-control"} %>
      </div>
      <%= f.submit "Submit", class: "btn-primary", data: { disable_with: "Submitting..."} %>
    <% end %>
    <div class="links"><%= link_to 'Back', lists_path %></div>
  </div>
</div>
