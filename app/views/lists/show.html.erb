<div class="group">
  <%= link_to("Edit", edit_list_path, class: "btn btn-primary btn-sm pull-right") %>
  <%= link_to("Delete", list_path(@list), class: "btn btn-sm btn-default pull-right", method: :delete, data:{confirm: "Are you sure?"}) %>
</div>
<h1>Title: <%= @list.title %></h1>
<p>Description: <%= @list.description %></p>

<div id="todo_items_wrapper">
  <%= render @list.items %>
  <div id="form">
    <%= render "items/form" %>
  </div>
</div>
