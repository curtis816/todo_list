<% content_for :page_title, "View #{@list.title}" %>
<h2 class="todo_list_title"><%= @list.title %></h1>
<p class="todo_list_sub_title"><%= @list.description %></p>

<div id="todo_items_wrapper">
  <%= render @list.items %>
  <div id="form">
    <%= render "items/form" %>
  </div>
</div>

<div class="links">
  <% if @list.editable_by?(current_user) %>
    <%= link_to("Edit", edit_list_path) %> |
    <%= link_to("Delete", list_path(@list), method: :delete, data:{confirm: "Are you sure?"}) %> |
  <% end %>
  <%= link_to 'Back', lists_path %>
</div>